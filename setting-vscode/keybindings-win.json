/*  *********************************************************************   
    参考 
    【Windows】https://qiita.com/TakahiRoyte/items/cdab6fca64da386a690b 
    【Mac】https://qiita.com/naru0504/items/99495c4482cd158ddca8     
                                                                        
    既定値を上書きするには、このファイル内にキー バインドを挿入しますauto[]  
    *********************************************************************   */
    [
        /*  *********************************************************************   
        ファイル名を指定して開く
        *********************************************************************   */
        {
            "key": "ctrl+p",
            "command": "workbench.action.quickOpen"
        },
        /*  *********************************************************************   
        行の先頭に移動
        *********************************************************************   */
        {
            "key": "ctrl+left",
            "command": "cursorHome"
        },
        /*  *********************************************************************   
        行の末尾に移動
        *********************************************************************   */
        {
            "key": "ctrl+right",
            "command": "cursorEnd"
        },
        /*  *********************************************************************   
        ウィンドウを閉じる
        *********************************************************************   */
        {
            "key": "ctrl+q",
            "command": "workbench.action.closeWindow"
        },
        /*  *********************************************************************   
        指定行に移動
        *********************************************************************   */
        {
            "key": "ctrl+g",
            "command": "workbench.action.gotoLine"
        },
        /*  *********************************************************************   
        コードをフォーマット
        *********************************************************************   */
        {
            "key": "shift+alt+f",
            "command": "editor.action.format"
        },
        /*  *********************************************************************   
        サイドバー表示のトグル
        *********************************************************************   */
        {
            "key": "ctrl+b",
            "command": "workbench.action.toggleSidebarVisibility"
        }
    ]